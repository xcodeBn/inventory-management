generator client {
  provider   = "prisma-client"
  output     = "../lib/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id String @id @default(cuid())

  userId     String
  name       String
  sku        String? @unique
  price      Decimal @db.Decimal(12, 2)
  quantity   Int     @default(0)
  lowStockAt Int?

  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  @@index([userId, name])
  @@index([createdAt])
}
